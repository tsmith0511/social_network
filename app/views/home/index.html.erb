<h1>Welcome to the Social Network</h1>

<% if @current_user %>

  <div>
    Welcome, <%= @current_user.username %>
    <a href="/logout">Logout</a><br>

  <a href="/profile/<%= @current_user.profile.id %>">View profile</a><br>
	<a href="/all">View Other's Profiles</a><br>
  <a href="/add/<%= @current_user.profile.id%>">Friend Me</a>
  </div>

<% else %>

  <div>
    <a href='/signup'>Signup</a> |
    <a href='/login'>Login</a>
  </div>
<% end %>


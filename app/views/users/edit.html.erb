<h1>Edit</h1>

<%= form_for User.find(params[:id]), url: '/users/update' do |f| %>
  <%= f.label "First name" %>
  <%= f.text_field :firstname %>
  <%= f.label "Last name" %>
  <%= f.text_field :lastname %>
  <br>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "Save" %>
<% end %>